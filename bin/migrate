#!/usr/bin/env php

<?php

require_once __DIR__ . "/../vendor/autoload.php";
require_once __DIR__ . "/../app/config/env.php";

use Migrations\Migrations\Migration;

if(DB_DRIVER === 'mysql'){
    $pdo = new PDO(DB_DSN_MYSQL, DB_USER_MYSQL, DB_PASS_MYSQL);
} elseif(DB_DRIVER === 'pgsql') {
    $pdo = new PDO(DB_DSN_POSTGRES, DB_USER_POSTGRES, DB_PASS_POSTGRES);
} else {
    die("Driver de base de données non supporté : " . DB_DRIVER);
}
$pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
$migration = new Migration($pdo);
$migration->run();
